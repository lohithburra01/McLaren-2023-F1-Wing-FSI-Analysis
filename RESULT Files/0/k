FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}

dimensions [0 2 -2 0 0 0 0];
internalField uniform 0.375; // k = 1.5*(U*I)^2, I=0.05

boundaryField
{
    inlet
    {
        type fixedValue;
        value uniform 0.375;
    }
    outlet
    {
        type zeroGradient;
    }
    bottom
    {
        type kqRWallFunction;
        value uniform 0.375;
    }
    top
    {
        type kqRWallFunction;
        value uniform 0.375;
    }
    sides
    {
        type kqRWallFunction;
        value uniform 0.375;
    }
    frontwing
    {
        type kqRWallFunction;
        value uniform 0.375;
    }
}
